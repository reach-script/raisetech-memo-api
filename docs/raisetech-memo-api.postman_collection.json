{
	"info": {
		"_postman_id": "0b809d96-c08c-4924-a1fc-f276ea5857d5",
		"name": "raisetech-memo-api",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let json = JSON.parse(responseBody)",
							"let ok = responseCode.code === 200",
							"",
							"if(ok){",
							"    pm.globals.set('token', 'Bearer ' + json.access_token)",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base}}/login",
					"host": [
						"{{base}}"
					],
					"path": [
						"login"
					]
				}
			},
			"response": []
		},
		{
			"name": "memos",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "{{token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base}}/memos",
					"host": [
						"{{base}}"
					],
					"path": [
						"memos"
					]
				}
			},
			"response": []
		}
	]
}